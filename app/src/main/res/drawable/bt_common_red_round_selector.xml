<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#414350" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#414350" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_red_bt" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/color_red_bt" />
        </shape>
    </item>
</selector>