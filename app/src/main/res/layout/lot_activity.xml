<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar_lot_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/lot_expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:clickable="true"
                android:visibility="gone"
                app:el_duration="300"
                app:el_expanded="false">

                <WebView
                    android:id="@+id/lot_cocos_wv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </net.cachapa.expandablelayout.ExpandableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bet_top_ret_top_divide" />

            <!-- 顶部背景区 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/lot_top_rect_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!-- 经典、传统 -->
                <!-- 期号、开奖号码、单双龙虎lable -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_lot_textcolor_default"
                            android:textSize="11dp"
                            tools:text="5分11选5 204期" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/lot_top_rect_history_bg_shape"
                            android:drawableRight="@drawable/lot_top_rect_history_arrow"
                            android:drawablePadding="8dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="1dp"
                            android:text="往期开奖"
                            android:textColor="@color/color_lot_textcolor_default"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <com.zhy.view.flowlayout.FlowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.zhy.view.flowlayout.FlowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- divide -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/lot_top_rect_divide_ic" />

                <!-- 投注状态、倒计时 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_lot_textcolor_default"
                        android:textSize="11dp"
                        tools:text="0369期 受注中" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lot_hour_ten_digit"
                            android:layout_width="20dp"
                            android:layout_height="27dp"
                            android:background="@drawable/lot_top_rect_countdown_shape"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/lot_hour_one_digit"
                            android:layout_width="20dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/lot_top_rect_countdown_shape"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            tools:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lot_munite_ten_digit"
                            android:layout_width="20dp"
                            android:layout_height="27dp"
                            android:background="@drawable/lot_top_rect_countdown_shape"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/lot_munite_one_digit"
                            android:layout_width="20dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/lot_top_rect_countdown_shape"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            tools:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <!-- divide -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/lot_top_rect_divide_ic" />

                <!-- 账户余额 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户余额"
                        android:textColor="@color/color_lot_textcolor_default"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        tools:text="¥58206.674" />

                </LinearLayout>
            </LinearLayout>

            <!-- 微投期号、号码、opentype -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#0277d1"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textColor="#a9d7fe"
                    android:textSize="12dp"
                    tools:text="第 204 期" />

                <com.zhy.view.flowlayout.FlowLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    tools:text="(综合:30,和,双)" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/lot_micro_top_rect_arrow" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/lot_rect_content_fl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_bg" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>