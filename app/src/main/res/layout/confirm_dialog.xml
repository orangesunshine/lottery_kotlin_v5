<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_white_corner8_shape"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!--图片-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_warning_ic" />

    <!--标题-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="@color/color_333333"
        android:textSize="17dp" />

    <!--文本框、或输入框内容区域-->
    <FrameLayout
        android:id="@+id/confirm_content_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <!--按钮区域单个或两个-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirm_cancel_bt"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/confirm_cancel_bt_shape"
            android:gravity="center"
            android:letterSpacing="1.5"
            android:text="@string/confirm_cancel_bt_text"
            android:textColor="#333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/confirm_confirm_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/confirm_confirm_bg_shape"
            android:gravity="center"
            android:letterSpacing="1.5"
            android:text="@string/confirm_confirm_bt_text"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>