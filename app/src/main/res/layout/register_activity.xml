<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/id_common_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_account_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:text="@string/register_account"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_15" />

        <EditText
            android:id="@+id/register_account_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/register_account_hint"
            android:textSize="@dimen/text_15" />
    </LinearLayout>

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_pwd_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:text="@string/register_pwd"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_15" />

        <EditText
            android:id="@+id/register_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/register_pwd_hint"
            android:textSize="@dimen/text_15" />
    </LinearLayout>

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_confirmpwd_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:text="@string/register_confirm_pwd"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_15" />

        <EditText
            android:id="@+id/register_confirmpwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/register_pwd_hint"
            android:textSize="@dimen/text_15" />
    </LinearLayout>

    <View style="@style/line_horizontal" />

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_verifycode_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:text="@string/register_verifycode"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_15" />

        <EditText
            android:id="@+id/register_verifycode_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/register_verifycode_hint"
            android:textSize="@dimen/text_15" />

        <ImageView
            android:id="@+id/register_verifycode_iv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <View style="@style/line_horizontal" />

    <TextView
        android:id="@+id/register_bt"
        style="@style/big_bt"
        android:layout_margin="20dp"
        android:letterSpacing="1.5"
        android:text="@string/register_text" />
</LinearLayout>